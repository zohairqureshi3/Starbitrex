doctype html
html
    head
        title= title
        style
            include style.css
    body
        section.admin-reset-password
            div.welcomeback-page
                div.logo-img
                    a(href=siteUrl)
                        include orbtx.svg
                form(method='POST')
                    h2 Reset Password
                    .form-group
                        p(htmlFor='password') New Password
                        div.input-field
                            input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
                    .form-group
                        p(htmlFor='confirm') Confirm Password
                        div.input-field
                            input.form-control(type='password', name='confirmPassword', value='', placeholder='Confirm password')
                    .form-group.button
                        button.btn(type='submit') Update Password